<h1>My Tasks</h1>
<% @tasks.each do |task| %>
<ul>
  <li><%=link_to task.title, task_path(task)%>  -  <%= task.details%> - completed:<%= task.completed ? "Y" : "N" %>
     <%= link_to "delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
     <%= link_to "edit task", edit_path(task) %>
  </li>
</ul>
<%= link_to "add new task", new_path%>

<% end %>
